{
  "name": "@easyshell",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "scripts/index.ts",
  "workspaces": [
    "packages/db",
    "packages/problems",
    "packages/utils",
    "packages/env",
    "apps/website",
    "apps/queue-processor",
    "scripts/"
  ],
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "@typescript-eslint/typescript-estree": "^8.25.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "scripts": {
    "deploy:dev": "docker compose -f ./deployment/dev/compose.yml up",
    "problems:build": "APP=script PROBLEMS_DIR=./problems bun ./scripts/problems-build.ts",
    "problems:lint": "APP=script PROBLEMS_DIR=./problems bun ./scripts/problems-lint.ts",
    "problems:test": "APP=queue-processor PROBLEMS_DIR=./problems WORKING_DIR_HOST=${PWD}/.easyshell WORKING_DIR_DOCKER=${PWD}/.easyshell bun ./scripts/problems-test.ts",
    "dev:queue-processor": "bun ./apps/queue-processor/index.ts",
    "dev:website": "bunx next dev apps/website",
    "lint:tsc": "bunx tsc --noEmit",
    "lint:next": "cd apps/website && SKIP_ENV_VALIDATION=1 bunx next lint"
  }
}
